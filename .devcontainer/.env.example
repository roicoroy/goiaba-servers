# Docker Compose Environment Variables for Goiaba Servers
# Copy this file to .env and customize the values

# Database Configuration
POSTGRES_USER=marketplace
POSTGRES_PASSWORD=super-secure-password
MEDUSA_DB_NAME=medusa_store
STRAPI_DB_NAME=strapi

# Medusa Configuration
DATABASE_URL=postgres://marketplace:super-secure-password@medusa-db:5432/medusa_store?ssl_mode=disable
REDIS_URL=redis://medusa-redis:6379
NODE_ENV=development
JWT_SECRET=supersecret
COOKIE_SECRET=supersecret
API_KEY=noop
VITE_BACKEND_URL=http://localhost:9000
MEDUSA_PUBLISHABLE_API_KEY=123

# CORS Configuration - Add your tunnel URLs here when using external access
STORE_CORS=http://localhost:8000,https://docs.medusajs.com,http://localhost:8100,http://localhost:46247/,http://localhost:5173
ADMIN_CORS=http://localhost:5173,http://localhost:9000,https://docs.medusajs.com,http://localhost:8100,http://localhost:46247/,http://localhost:5173
AUTH_CORS=http://localhost:5173,http://localhost:9000,https://docs.medusajs.com,http://localhost:8100,http://localhost:46247/,http://localhost:5173

# Strapi Configuration
STRAPI_HOST=0.0.0.0
STRAPI_PORT=1337
STRAPI_APP_KEYS=toBeModified1,toBeModified2
STRAPI_API_TOKEN_SALT=tobemodified
STRAPI_ADMIN_JWT_SECRET=tobemodified
STRAPI_TRANSFER_TOKEN_SALT=tobemodified
STRAPI_JWT_SECRET=tobemodified
STRAPI_DATABASE_CLIENT=postgres
STRAPI_DATABASE_HOST=strapi-db
STRAPI_DATABASE_PORT=5432
STRAPI_DATABASE_NAME=strapi
STRAPI_DATABASE_USERNAME=strapi
STRAPI_DATABASE_PASSWORD=strapi
STRAPI_DATABASE_SSL=false

# Tunnel Configuration (uncomment and set when using external access)
# TUNNEL_MEDUSA_URL=https://your-medusa-subdomain.loca.lt
# TUNNEL_STRAPI_URL=https://your-strapi-subdomain.loca.lt